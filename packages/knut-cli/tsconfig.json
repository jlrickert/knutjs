{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@jlrickert/knutjs-tsconfig/base.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"esModuleInterop": true,
		"declaration": true,
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "NodeNext",
		"moduleResolution": "Node16",
		"types": ["vitest/importMeta"]
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["**/dist/", "**/node_modules/"]
}
