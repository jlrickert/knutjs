{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"id": "https://raw.githubusercontent.com/jlrickert/knutjs/main/packages/knut-core/kegSchema.json",
	"title": "JSON schema for a KEG configuration file",
	"type": "object",
	"allowTrailingCommas": false,
	"properties": {
		"updated": {
			"type": "string",
			"description": "last time updated"
		},
		"kegv": {
			"type": "string",
			"description": "Version of keg schema to use",
			"enum": [
				"2023-01"
			]
		},
		"title": {
			"type": "string",
			"description": "title of keg"
		},
		"url": {
			"type": "string",
			"description": "URL for the keg"
		},
		"linkfmt": {
			"type": "string",
			"description": "Format string for a url"
		},
		"creator": {
			"type": "string",
			"description": "URL for the creator of the keg"
		},
		"timezone": {
			"type": "string",
			"description": "timezone that time stamps will be referring too"
		},
		"state": {
			"type": "string",
			"description": "Too lazy to look up what this is",
			"enum": [
				"living"
			]
		},
		"summary": {
			"type": "string",
			"description": "Summary of the keg"
		},
		"format": {
			"type": "string",
			"description": "prefered format to use",
			"enum": [
				"yaml",
				"json"
			]
		},
		"plugins": {
			"type": "array",
			"description": "List of plugins",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string",
						"description": "Name of the plugin"
					},
					"enabled": {
						"type": "boolean",
						"description": "Is the plugin enabled"
					}
				}
			}
		},
		"indexes": {
			"type": "array",
			"description": "List of index",
			"items": {
				"type": "object",
				"properties": {
					"file": {
						"type": "string",
						"description": "File to use"
					},
					"summary": {
						"type": "string",
						"description": "Summary for the index"
					},
					"plugin": {
						"type": "string",
						"description": "Name of the plugin to use"
					}
				},
				"required": [
					"file",
					"summary"
				]
			}
		}
	},
	"required": [
		"kegv"
	]
}
