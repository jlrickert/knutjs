{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"id": "https://raw.githubusercontent.com/jlrickert/knutjs/main/packages/knut-core/knutSchema.json",
	"title": "JSON schema for the KnutJS's configuration file",
	"type": "object",
	"allowTrailingCommas": false,
	"properties": {
		"version": {
			"type": "string",
			"description": "knut config file version",
			"enum": [
				"draft-0.1"
			]
		},
		"format": {
			"type": "string",
			"description": "prefered format to use",
			"enum": [
				"kdl",
				"yaml",
				"json"
			]
		},
		"plugins": {
			"type": "object",
			"description": "",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"description": "name of plugin",
						"type": "boolean"
					},
					"enabled": {
						"description": "plugin is enabled",
						"type": "boolean"
					}
				}
			}
		},
		"kegs": {
			"type": "array",
			"description": "Config for a keg",
			"items": {
				"type": "object",
				"properties": {
					"alias": {
						"description": "Shorthand alias to reference the keg",
						"type": "string",
						"required": true
					},
					"url": {
						"description": "URL pointing to the keg. This could be a file path or an http url to a valid keg",
						"type": "string",
						"required": true
					},
					"enabled": {
						"description": "If is to be included in operations",
						"type": "boolean"
					},
					"readable": {
						"description": "Able to read",
						"type": "boolean"
					},
					"writable": {
						"description": "Able to write to keg",
						"type": "boolean"
					},
					"executable": {
						"description": "Able to execute scripts",
						"type": "boolean"
					}
				}
			}
		}
	}
}
