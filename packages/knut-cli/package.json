{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "@jlrickert/knutjs-cli",
	"version": "0.3.1",
	"license": "Apache-2.0",
	"bin": {
		"knut": "./dist/main.js"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"module": "./dist/index.js",
			"types": "./dist/index.d.ts",
			"require": "./dist/index.cjs"
		},
		"./*": {
			"module": "./dist/*.js",
			"types": "./dist/*.d.ts",
			"require": "./dist/*.cjs"
		}
	},
	"files": [
		"dist",
		"package.json"
	],
	"scripts": {
		"build": "pnpm run clean && cross-env NODE_ENV=production tsc --project tsconfig.build.json && pnpm run typecheck",
		"clean": "tsc --build --clean",
		"dev": "pnpm run clean && tsc --build && tsc --build --watch",
		"typecheck": "tsc --noEmit",
		"lint": "eslint src/",
		"test": "vitest",
		"prepare": "pnpm run build"
	},
	"devDependencies": {
		"@jlrickert/knutjs-tsconfig": "workspace:*",
		"@types/node": "^20.10.4",
		"cross-env": "^7.0.3",
		"rimraf": "^5.0.5",
		"tsup": "^8.0.1",
		"typescript": "^5.3.3",
		"vitest": "^1.0.4"
	},
	"dependencies": {
		"@jlrickert/knutjs-core": "workspace:*",
		"commander": "^11.1.0",
		"fp-ts": "^2.16.2",
		"tiny-invariant": "^1.3.1"
	}
}
