{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@jlrickert/knutjs-tsconfig/base.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"target": "ES2022",
		"allowSyntheticDefaultImports": true,
		"lib": [
			"ES2022",
			"DOM"
		],
		"declaration": true,
		"esModuleInterop": true,
		"module": "Node16",
		"moduleResolution": "Node16",
		"types": [
			"vitest/importMeta"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"**/dist/",
		"**/node_modules/"
	]
}
